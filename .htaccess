# Block access to config file:

<files config.json>
order allow,deny
deny from all
</files>

# Block access to tmp directory (logfiles and config) and includes directory (MySQL login):

RewriteEngine On
RewriteRule (^|/)tmp(/|$) - [F]
RewriteRule (^|/)includes(/|$) - [F]

# PHP Debugging

php_flag display_errors Off

